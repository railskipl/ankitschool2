 <div id="content">
 	<p class='buttons'>
 		
 		<%= link_to  "Add Pages", new_admin_page_path, :class => 'button positive' %>
 		</p>
		<p class='clear'></p>
		   

			<table class="admintable">
			  <tr class="admintablehd">
			    <td width="25%">Title</td>
			    <td>Description</td>
			    <td width="27%" style="text-align: center !important;">Action</td>
			  </tr>
			
			<% @pages.each do |page| %>
			  <tr>
			    <td><%= page.title %></td>
			    <td><%= truncate(page.body, :length => 110).html_safe %> </td>
			    <td style="text-align: center !important;"> <%= link_to "Edit", edit_admin_page_path(page), :class=>'button positive' %> &nbsp;&nbsp; 
				<a href="/admin/pages/<%= page.id %>/delete" onclick="if(confirm('Are you sure you want to delete this page?'))  return true;  else  return false;" class="button negative" >Delete</a>
				</td>
			    
			  </tr>
			<% end %>
			</table>
			<br />
			
</div>